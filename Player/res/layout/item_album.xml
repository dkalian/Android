<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:id="@+id/item_album_album_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Album title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/item_album_artist_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_album_album_title_text"
            android:layout_below="@+id/item_album_album_title_text"
            android:text="Artist title"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/item_album_year_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_album_artist_title_text"
            android:layout_below="@+id/item_album_artist_title_text"
            android:text="Year"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/item_album_button_play_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Play" />

    </RelativeLayout>

</LinearLayout>
